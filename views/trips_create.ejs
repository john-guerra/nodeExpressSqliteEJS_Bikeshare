<!doctype html>
<html>
  <head>
    <title>Trip Edit</title>
    <%- include('./partials/css.ejs') %>
  </head>
  <body>
    <div class="container">
      <%- include("./partials/navBar.ejs") %>
      <h1>Create Trip</h1>

      <%- include("./partials/errMsg.ejs") %>



      <form action="/trips/create" method="POST">
        <div class="mb-3">
          <label class="form-label">
            Start Station Name
            <input
              type="text"
              name="start_station_name"
              class="form-control"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label">
            End Station Name
            <input
              type="text"
              name="end_station_name"
              class="form-control"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label">
            Started at
            <input
              type="text"
              name="started_at"
              class="form-control"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label">
            Ended at
            <input
              type="text"
              name="ended_at"
              class="form-control"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label">
            Type of Ride
            <input
              type="text"
              name="rideable_type"
              class="form-control"
            />
          </label>
        </div>

        <div>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>

      <%- include("./partials/footer.ejs") %>
    </div>
    <!-- /.container -->
  </body>
</html>
