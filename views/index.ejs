<!doctype html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>


      <% if (err) { %>
      <div id="errMsg" class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= err %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>


      <div class="row">
        <% trips.forEach(function(trip){ %>
        <div class="col-4 mb-2">
          <div class="card p-2">
            <div class="card-title">
              <label>Ride ID: <output><%= trip.ride_id %></output> </label>
            </div>
            <div class="card-text">
              <div>
                <label
                  >started_at: <output><%= trip.started_at %></output>
                </label>
              </div>
              <div>
                <label
                  >Bike Type: <output><%= trip.rideable_type %></output>
                </label>
              </div>
            </div>
            <!-- /.card-text -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col-4 -->

        <% }); %>
      </div>
      <!-- /.row -->

      <footer>
        <div>Made by John with 💪🏼</div>
      </footer>
    </div>
    <!-- /.container -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
